// keybind Section
binds {

    // Custom scratchpad support
    //Mod+Ctrl+S hotkey-overlay-title="Spotify Scratchpad Toggle" { spawn-sh "niri-scratchpad spotify"; }
    //Mod+Ctrl+F hotkey-overlay-title="Nemo Scratchpad Toggle" { spawn-sh "niri-scratchpad nemo"; }

    //Mod+Slash           repeat=false    hotkey-overlay-title="focus workspace scratch" { focus-workspace "scratch"; }

    // Menu
    MOD+ALT+SPACE      repeat=false    hotkey-overlay-title="Main Menu" { spawn-sh "$HOME/.config/scripts/vicinae-main-menu.sh"; }


    // Power Menu
    MOD+X              repeat=false    hotkey-overlay-title="Power Menu" { spawn-sh "$HOME/.config/scripts/vicinae-power-menu.sh"; }

    // Sunsetr
    MOD+U               repeat=false    hotkey-overlay-title="Sunset Status" {  spawn-sh "~/.config/scripts/start-sunsetr.sh status"; }
    MOD+SHIFT+U         repeat=false    hotkey-overlay-title="Toggle Sunset DAY" { spawn-sh "~/.config/scripts/start-sunsetr.sh day"; }
    MOD+CTRL+U          repeat=false    hotkey-overlay-title="Toggle Sunset NIGHT" { spawn-sh "~/.config/scripts/start-sunsetr.sh night"; }
    MOD+SHIFT+ALT+U     repeat=false    hotkey-overlay-title="Toggle Sunset GAMING" { spawn-sh "~/.config/scripts/start-sunsetr.sh gaming"; }
    MOD+SHIFT+CTRL+U    repeat=false    hotkey-overlay-title="Toggle Sunset Default" { spawn-sh "~/.config/scripts/start-sunsetr.sh start"; }
    MOD+ALT+U           repeat=false    hotkey-overlay-title="Toggle Sunset Auto" { spawn-sh "~/.config/scripts/start-sunsetr.sh auto"; }

    // Wallpaper Selector
    MOD+W              repeat=false    hotkey-overlay-title="Open Wallpaper Selector" { spawn-sh "$HOME/.config/scripts/bgselector.sh"; }
    MOD+SHIFT+W        repeat=false    hotkey-overlay-title="Open Wallpaper vicinae" { spawn-sh "vicinae vicinae://extensions/sovereign/awww-switcher/wpgrid"; }
    // Application Restarts
    MOD+ALT+W                           hotkey-overlay-title="Toggle View Waybar" { spawn "sh" "-c" "pgrep -x waybar >/dev/null && killall waybar || waybar &"; }
    // use with toggle in waybar (doens't restart if not running)
    // MOD+ALT+W                           { spawn "killall" "-SIGUSR1" "waybar"; }

    // Shortcuts Panel
    MOD+SHIFT+slash                    { show-hotkey-overlay; }
    // Open overview
    MOD+O              repeat=false    { toggle-overview; }

    // Application Shortcuts
    // Terminal
    MOD+RETURN         repeat=false    hotkey-overlay-title="Kitty" { spawn-sh "kitty"; }
    //MOD+SHIFT+RETURN   repeat=false    hotkey-overlay-title="Kitty(firejail)" { spawn-sh "firejail kitty"; }
    // MOD+ALT+RETURN     repeat=false    { spawn "alacritty"; }

    // Launcher
    MOD+SPACE          repeat=false    hotkey-overlay-title="Vicinae" { spawn-sh "vicinae toggle"; }

    // Browser
    MOD+B              repeat=false    hotkey-overlay-title="Firefox" { spawn-sh "firefox"; }
    //MOD+SHIFT+B              repeat=false    hotkey-overlay-title="Firefox(firejail)" { spawn-sh "firejail firefox"; }

    //MOD+ALT+B                          { spawn-sh "google-chrome-stable --enable-features=TouchpadOverscrollHistoryNavigation"; }

    // File Manager
    MOD+E              repeat=false    hotkey-overlay-title="Thunar" { spawn "thunar"; }
    MOD+SHIFT+E        repeat=false    hotkey-overlay-title="SUperfile" { spawn-sh "kitty -e spf"; }
    MOD+ALT+E          repeat=false    hotkey-overlay-title="Yazi" { spawn-sh "kitty -e yazi"; }

    // Lock
    MOD+SHIFT+L        repeat=false    hotkey-overlay-title="Lock Screen: hyprlock" { spawn "hyprlock"; }

    // Center Column & Clipboard
    MOD+C              repeat=false    hotkey-overlay-title="Center Column" { center-column; }
    MOD+SHIFT+C        repeat=false    hotkey-overlay-title="Center Visible Column"  { center-visible-columns; }
    MOD+CTRL+C         repeat=false    hotkey-overlay-title="Clipboard history"  { spawn "vicinae" "vicinae://extensions/vicinae/clipboard/history"; }

    // Media Keys
    XF86AudioRaiseVolume   allow-when-locked=true   { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05+"; }
    XF86AudioLowerVolume   allow-when-locked=true   { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05-"; }
    XF86AudioMute          allow-when-locked=true   { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"; }
    XF86AudioMicMute       allow-when-locked=true   { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"; }
    xF86AudioPlay          allow-when-locked=true   { spawn-sh "playerctl --player=spotify 'play-pause'"; }
    xF86AudioStop          allow-when-locked=true   { spawn-sh "playerctl --player=spotify 'stop'"; }
    xF86AudioPrev          allow-when-locked=true   { spawn-sh "playerctl --player=spotify 'previous'"; }
    xF86AudioNext          allow-when-locked=true   { spawn-sh "playerctl --player=spotify 'next'"; }

    // brightness key
    XF86MonBrightnessUp    allow-when-locked=true   { spawn-sh "brightnessctl --class=backlight set +1%"; }
    XF86MonBrightnessDown  allow-when-locked=true   { spawn-sh "brightnessctl --class=backlight set 1%-"; }

    // Window Management
    MOD+Q              repeat=false     { close-window; }

    // Move focus windows
    MOD+LEFT                            { focus-column-left; }
    MOD+DOWN                            { focus-window-down; }
    MOD+UP                              { focus-window-up; }
    MOD+RIGHT                           { focus-column-right; }

    // Consume or expel windows
    Mod+ALT+LEFT                        hotkey-overlay-title="consume or expel window left" { consume-or-expel-window-left; }
    Mod+ALT+RIGHT                       hotkey-overlay-title="consume or expel window right" { consume-or-expel-window-right; }

    Mod+Comma                           hotkey-overlay-title="consume window into column" { consume-window-into-column; }
    Mod+Period                          hotkey-overlay-title="expel window from column" { expel-window-from-column; }

    // Tab
    MOD+G              repeat=false     hotkey-overlay-title="toggle column tabbed" { toggle-column-tabbed-display; }

    // Move windows within workspace
    MOD+SHIFT+LEFT                      { move-column-left; }
    MOD+SHIFT+DOWN                      { move-window-down; }
    MOD+SHIFT+UP                        { move-window-up; }
    MOD+SHIFT+RIGHT                     { move-column-right; }

    MOD+ALT+UP                          hotkey-overlay-title="move column to workspace down" { move-column-to-workspace-down; }
    MOD+ALT+DOWN                        hotkey-overlay-title="move column to workspace up" { move-column-to-workspace-up; }

    // Focus/ Move to workspace edges
    MOD+HOME                            { focus-column-first; }
    MOD+END                             { focus-column-last; }

    MOD+SHIFT+HOME                      { move-column-to-first; }
    MOD+SHIFT+END                       { move-column-to-last; }

    // Monitor Management - Move between monitors
    MOD+CTRL+LEFT                       { focus-monitor-left; }
    MOD+CTRL+RIGHT                      { focus-monitor-right; }
    MOD+CTRL+UP                         { focus-monitor-up; }
    MOD+CTRL+DOWN                       { focus-monitor-down; }

    // Move windows to different monitors
    MOD+SHIFT+CTRL+LEFT                 { move-column-to-monitor-left; }
    MOD+SHIFT+CTRL+RIGHT                { move-column-to-monitor-right; }
    MOD+SHIFT+CTRL+UP                   { move-column-to-monitor-up; }
    MOD+SHIFT+CTRL+DOWN                 { move-column-to-monitor-down; }

    // Workspace Management
    MOD+WHEELSCROLLDOWN                 cooldown-ms=100 { focus-workspace-down; }
    MOD+WHEELSCROLLUP                   cooldown-ms=100 { focus-workspace-up; }

    // Move windows to different workspaces - using wheel matches K/J pattern
    MOD+SHIFT+WHEELSCROLLDOWN           cooldown-ms=100 { move-column-to-workspace-down; }
    MOD+SHIFT+WHEELSCROLLUP             cooldown-ms=100 { move-column-to-workspace-up; }

    // Column navigation with mouse
    MOD+WHEELSCROLLRIGHT                { focus-column-right; }
    MOD+WHEELSCROLLLEFT                 { focus-column-left; }
    MOD+CTRL+WHEELSCROLLRIGHT           { move-column-right; }
    MOD+CTRL+WHEELSCROLLLEFT            { move-column-left; }

    // Numbered Workspaces
    MOD+1                               { focus-workspace 1; }
    MOD+2                               { focus-workspace 2; }
    MOD+3                               { focus-workspace 3; }
    MOD+4                               { focus-workspace 4; }
    MOD+5                               { focus-workspace 5; }
    MOD+6                               { focus-workspace 6; }
    MOD+7                               { focus-workspace 7; }
    MOD+8                               { focus-workspace 8; }
    MOD+9                               { focus-workspace 9; }

    // Move windows to numbered workspaces with MOD+SHIFT
    MOD+SHIFT+1                         { move-column-to-workspace 1; }
    MOD+SHIFT+2                         { move-column-to-workspace 2; }
    MOD+SHIFT+3                         { move-column-to-workspace 3; }
    MOD+SHIFT+4                         { move-column-to-workspace 4; }
    MOD+SHIFT+5                         { move-column-to-workspace 5; }
    MOD+SHIFT+6                         { move-column-to-workspace 6; }
    MOD+SHIFT+7                         { move-column-to-workspace 7; }
    MOD+SHIFT+8                         { move-column-to-workspace 8; }
    MOD+SHIFT+9                         { move-column-to-workspace 9; }

    MOD+TAB                             hotkey-overlay-title="focus workspace previous" { focus-workspace-previous; }

    // Layout Controls
    Mod+SHIFT+ALT+LEFT                  { set-column-width "-5%"; }
    Mod+SHIFT+ALT+RIGHT                 { set-column-width "+5%"; }
    Mod+SHIFT+ALT+UP                    { set-window-height "-5%"; }
    Mod+SHIFT+ALT+DOWN                  { set-window-height "+5%"; }

    MOD+BRACKETLEFT                     { set-column-width "-10%"; }
    MOD+BRACKETRIGHT                    { set-column-width "+10%"; }
    MOD+SHIFT+BRACKETLEFT               { set-window-height "-10%"; }
    MOD+SHIFT+BRACKETRIGHT              { set-window-height "+10%"; }

    Mod+R              repeat=false     { switch-preset-column-width; }
    Mod+SHIFT+R        repeat=false     { switch-preset-window-height; }
    Mod+CTRL+R                          { reset-window-height; }

    // Window resizing with mouse
    MOD+CTRL+WHEELSCROLLDOWN            { set-window-height "-5%"; }
    MOD+CTRL+WHEELSCROLLUP              { set-window-height "+5%"; }

    // Window Modes
    MOD+T              repeat=false     { toggle-window-floating; }
    Mod+SHIFT+T                         { switch-focus-between-floating-and-tiling; }

    MOD+F              repeat=false     { maximize-column; }
    Mod+SHIFT+F        repeat=false     { maximize-window-to-edges; }
    MOD+ALT+F          repeat=false     { fullscreen-window; }
    Mod+CTRL+F         repeat=false     { toggle-windowed-fullscreen; }
    Mod+SHIFT+ALT+F    repeat=false     { expand-column-to-available-width; }

    // Utils
    Print              repeat=false     hotkey-overlay-title="screenshot" { screenshot; }
    SHIFT+Print                         { screenshot-screen write-to-disk=true; }
    CTRL+Print                          { screenshot-window write-to-disk=true; }
    //MOD+S                               { screenshot; }
    //MOD+SHIFT+S                         { screenshot-screen write-to-disk=true; }
    //MOD+CTRL+S                          { screenshot-window write-to-disk=true; }
    MOD+P                               hotkey-overlay-title="hyprpicker" { spawn-sh "pgrep -x hyprpicker >/dev/null || hyprpicker"; }

}
