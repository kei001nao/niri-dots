    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["Alacritty", "kitty", "ghostty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },

  // niri Window
  "niri/window": {
    "format": "â•â•â• {} â•â•â•¡âœ§ã€‹",
    "max-length": 55,
    "expand": false,
    "rewrite": {
      "(.*) - Zen Browser": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1"
    },
    "separate-outputs": true
  },

  // Empty
  "custom/empty": {
    "format": "ó°³³",
