  "group/center1": {
    "orientation": "inherit",
    "modules": [
      "idle_inhibitor",
      "custom/updatespacman",
      "custom/update"
      ]
  },
  "group/center2": {
    "orientation": "inherit",
    "modules": ["hyprland/workspaces"]
  },
  "group/center3": {
    "orientation": "inherit",
    "modules": ["custom/weather",
                "clock",
                "clock#time",
                "clock#dateicon",
                "clock#date",
                "clock#day"]
  },
  "group/center4": {
    "orientation": "inherit",
    "modules": ["backlight","backlight#percentage",
                "pulseaudio",
                "bluetooth", "network",
                "cpu","cpu#percentage",
                "battery","battery#percentage"]
